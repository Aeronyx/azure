{
	"name": "hist-weather-ingest",
	"properties": {
		"activities": [
			{
				"name": "get-weather-key",
				"type": "WebActivity",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": true,
					"secureInput": false
				},
				"typeProperties": {
					"method": "GET",
					"url": "https://ds598-vault.vault.azure.net/secrets/openweather-api/6fb980c4f4ea4518aaf006538274a8e6?api-version=7.0",
					"authentication": {
						"type": "MSI",
						"resource": "https://vault.azure.net"
					}
				}
			},
			{
				"name": "ForEachWeek",
				"type": "ForEach",
				"dependsOn": [
					{
						"activity": "get-weather-key",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"typeProperties": {
					"items": {
						"value": "@range(1, 53)",
						"type": "Expression"
					},
					"isSequential": true,
					"activities": [
						{
							"name": "Copy Historical Weekly",
							"type": "Copy",
							"dependsOn": [],
							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"source": {
									"type": "RestSource",
									"httpRequestTimeout": "00:01:40",
									"requestInterval": "00.00:00:00.010",
									"requestMethod": "GET",
									"paginationRules": {
										"supportRFC5988": "true"
									}
								},
								"sink": {
									"type": "JsonSink",
									"storeSettings": {
										"type": "AzureBlobFSWriteSettings",
										"copyBehavior": {
											"value": "/weekly-historical-weather/week-@{item()}-weather.json",
											"type": "Expression"
										}
									},
									"formatSettings": {
										"type": "JsonWriteSettings"
									}
								},
								"enableStaging": false
							},
							"inputs": [
								{
									"referenceName": "historical_api_REST",
									"type": "DatasetReference",
									"parameters": {
										"lat": "42.3601",
										"lon": "-71.0589",
										"appid": {
											"value": "@activity('get-weather-key').output",
											"type": "Expression"
										}
									}
								}
							],
							"outputs": [
								{
									"referenceName": "HIST_WEATHER_JSON",
									"type": "DatasetReference"
								}
							]
						}
					]
				}
			}
		],
		"variables": {
			"api-key": {
				"type": "String"
			}
		},
		"annotations": []
	}
}